{
  "query": {
    "bool": {
      "filter": [
        {
          "range": {
            "data.firstStopReminderSentDate": {
              "gte": "%s",
              "lte": "%s"
            }
          }
        },
        {
          "terms": {
            "state.keyword": [
              "BOCaseStopped",
              "BOCaseStoppedReissue"
            ]
          }
        },
        {
          "bool": {
            "must_not": {
              "terms": {
                "data.caseType.keyword": [
                  "edgeCase"
                ]
              }
            }
          }
        }
      ]
    }
  },
  "size": %s,
  "_source": ["reference"],
  "sort": [
    {
      "reference.keyword": "asc"
    }
  ]
