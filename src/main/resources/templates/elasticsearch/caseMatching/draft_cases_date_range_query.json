{
  "size": :size,
  "from": :from,
  "query": {
    "bool": {
      "filter": [
        {
          "range": {
            "last_modified": {
              "gte": ":fromDate",
              "lte": ":toDate"
            }
          }
        },
        {"match": {"state": "PAAppCreated"}},
        {"match": {"state": "CasePaymentFailed"}},
        {"match": {"state": "Pending"}}
      ]
    }
  },
  "sort": [
    {
      "id": {
        "order": "asc"
      }
    }
  ]
}